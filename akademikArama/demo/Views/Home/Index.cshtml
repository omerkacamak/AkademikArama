@model Layers.Arastirmaci
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Araştırmacı Kayıt Sayfası</h1>
   
</div>
 @using(Html.BeginForm("Index","Home",FormMethod.Post)){
     <div class="form-row">
								<div class="col-md-6 mb-3">
										<label for="validationCustom01">Ad</label>

									@* <input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="" required=""> *@
									@Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
									
									
								</div>
								<div class="col-md-6 mb-3">
										<label for="validationCustom01">Soyad</label>

									@* <input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="" required=""> *@
									@Html.TextBoxFor(x=>x.Soyad,new{@class="form-control"})
									 
								</div>
								<div class="col-md-6 mb-3">
										<label for="validationCustom02">Yayin Adi</label>
									@* <input type="email" class="form-control" id="validationDefault02" name="WriterMail" placeholder="" required=""> *@
