								</div>
								<div class="col-md-6 mb-3">
										<label for="validationCustom02">Türü</label>
									@* <input type="email" class="form-control" id="validationDefault02" name="WriterMail" placeholder="" required=""> *@
									@Html.TextBoxFor(x=>x.Yayinlars.Turs.TurAdi,new{@class="form-control"})
									
								</div>
								<div class="col-md-6 mb-3">
										<label for="validationCustom02">Yayin Yeri</label>
									@* <input type="email" class="form-control" id="validationDefault02" name="WriterMail" placeholder="" required=""> *@
									@Html.TextBoxFor(x=>x.Yayinlars.YayinYeri,new{@class="form-control"})
									
								</div>
								
						
							</div>
							<button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
								<p>
									<a href="#" id="btn1">Tüm şartları okudum,kabul ediyorum.</a>
                                    
								</p>
